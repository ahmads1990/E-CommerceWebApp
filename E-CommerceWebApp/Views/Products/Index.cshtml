@model IEnumerable<E_CommerceWebApp.Models.Product>
@{
    var imageWidth = 150;
    var imageHeight = "auto";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.ProductImage == null)
                    {
                        <!-- Product image-->
                        <img width="@imageWidth" height="@imageHeight" object-fit="cover";class="card-img-top" src="https://dummyimage.com/100x100/dee2e6/6c757d.jpg" alt="..." />
                    }
                    else
                    {
                        <img width="@imageWidth" height="@imageHeight" object-fit="cover" src="data:image/*;base64,@(Convert.ToBase64String(item.ProductImage.ImageData))" class="img-thumbnail" alt="" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Update" asp-route-productID="@item.ProductID">Update</a> |
                    <a asp-action="Delete" asp-route-productID="@item.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>