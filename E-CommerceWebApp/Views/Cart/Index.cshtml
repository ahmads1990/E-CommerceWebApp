@model E_CommerceWebApp.Models.Cart
@{
    var imageWidth = "auto";
    var imageHeight = 100;
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(cart=>cart.CartItems.FirstOrDefault().Product.ProductImage)</th>
            <th>@Html.DisplayNameFor(cart=>cart.CartItems.FirstOrDefault().Product.ProductName)</th>
            <th>@Html.DisplayNameFor(cart=>cart.CartItems.FirstOrDefault().Product.Price)</th>
            <th>@Html.DisplayNameFor(cart=>cart.CartItems.FirstOrDefault().Amount)</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.CartItems != null)
        {
            @foreach (var item in Model.CartItems)
            {
                <!-- Product image-->
                <tr>
                    <td>
                        @if (item.Product.ProductImage == null)
                        {
                            @*if image is null load dummy image*@
                            <img width="@imageWidth" height="@imageHeight" object-fit="cover"
                            class="c" src="https://dummyimage.com/100x100/dee2e6/6c757d.jpg"
                            alt="Image for product @(item.Product.ProductName)" />
                        }
                        else
                        {
                            <img width="@imageWidth" height="@imageHeight" object-fit="cover"
                            class="c" src="data:image/*;base64,@(Convert.ToBase64String(item.Product.ProductImage.ImageData))"
                            alt="Image for product @(item.Product.ProductName)" />
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@(
                        item.Product.Price * item.Amount
                        )</td>
                    <td>
                        <a asp-action="UpdateCartItemAmount" asp-route-itemID="@item.ID" asp-route-amount="@(item.Amount+1)">Add More</a> |
                        <a asp-action="RemoveCartItem" asp-route-id="@item.ID">Remove</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>